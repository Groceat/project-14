<!-- Loop over each object in the posts array -->
<div id="topg"class="row mb-4 post">
{{#each Posts as |post| }}

  <div class="col-md-5">
    <h2>
     <a>{{post.post_title}}</a>
    </h2>
     <a>{{post.description}}</a>
    <p>
       <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
 {{#if post.Comments.length}}
    <h3>Comments:</h3>
      <div></div>
    {{#each Comments as |comment|}}
  <div>{{comment.description}}</div>
    <div>Posted By:{{comment.name}} </div>
  
    {{/each}}
  {{/if}}
  <button dataid="{{post.id}}" id="commentbtn">Add a comment</button>
{{/each}}
</div>

<script src="./js/homepage.js"></script>