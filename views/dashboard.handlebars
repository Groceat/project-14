<div class="row">
  <div class="col-auto">
    <h2>Hello, {{name}}!</h2>
  </div>
</div>

<div id="insert" class="row mt-4">
  {{#if Posts.length}}
  <div id="postie"class="col-md-6 post-list">
    <h3>Current posts:</h3>
    {{#each Posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.post_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button id="deletebtn" class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    <div comment-id="{{post.id}}" id="commentbox">
    </div>
    {{/each}}
  </div>
  {{/if}}
   <button id="askbtn" class="btn btn-sm">Add a Post</button>

  
</div>

<script src="./js/dashboard.js"></script>
